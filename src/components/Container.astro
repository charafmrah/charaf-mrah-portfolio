<div class="container">
  <slot />
</div>

<script>
  const container = document.querySelector(".container");

  container.addEventListener("wheel", (e: WheelEvent) => {
    e.preventDefault();
    e.deltaY > 0
      ? (container.scrollLeft += 1000)
      : (container.scrollLeft -= 1000);
  });
</script>

<style>
  .container {
    display: flex;
    min-width: 100%;
    flex-direction: row;
    align-items: center;
    scroll-snap-type: x mandatory;
    overflow-x: scroll;
    overflow-y: hidden;
    white-space: nowrap;
    scroll-behavior: smooth;
  }
</style>
